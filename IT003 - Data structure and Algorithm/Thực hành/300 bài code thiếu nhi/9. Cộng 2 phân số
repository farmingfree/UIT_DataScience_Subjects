#include<iostream>
using namespace std;
int main() {
    int a, b, c, d, e, f;
    cin >> a >> b >> c >> d;
    if (b == d) {
        f = b;
        e = a + c;

    }
    else {
        f = b * d;
        e = a * d + c * b;
    }


    if (f >= e) {
        int i = e;
        while (i > 1) {
            if (e % i == 0 && f % i == 0) {
                e = e / i;
                f = f / i;
            }
            i--;

        }
    }
    else {
        int i = f;
        while (i > 1) {
            if (e % i == 0 && f % i == 0) {
                e = e / i;
                f = f / i;
            }
            i--;

        }
    }
    cout << e << " " << f;
    return 0;}
