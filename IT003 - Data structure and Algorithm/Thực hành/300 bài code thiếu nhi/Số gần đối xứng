#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int main() {
    int x;
    cin >> x;
    vector<int>a;
    while (x > 0) {
        a.push_back(x % 10);
        x /= 10;
    }
    reverse(a.begin(), a.end());
    int n = a.size();
    for (int i = n - 1;i > 0;i--) {
        if (a[i] == 0) {
            a.erase(a.begin() + i);
        }
        else { break; }
    }
    n = a.size();
    int k = n;
    
        if (n % 2 != 0) { 
    for (int i = 0; i <= (n - 1) / 2; i++) {
        if (i == (n - 1) / 2) {
            cout << "YES";
            break;
        }
     
    if (a[i] == a[k - 1]) { 
        k--; 
    } else { 
        cout << "NO"; 
        break;
    }
}
    }
    
    else {
        int i = 0;
        while (i <= k / 2) {
            if (i == k / 2) {
                cout << "YES";
                break;
            }
            if (a[i] != a[n - 1]) {
                cout << "NO";
                break;
        }
            i++;
            n--;
        }
        
    }
    return 0;
}
